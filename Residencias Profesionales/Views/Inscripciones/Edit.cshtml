@model Residencias.Models.Api.Inscripciones

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Inscripciones</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.nu_inscripcion)

        <div class="form-group">
            @Html.LabelFor(model => model.nu_grupo, "nu_grupo", htmlAttributes: new { @class = "control-label col-md-2" })
